{
  "variables": {
    "iso_urls": "http://uk.mirrors.clouvider.net/almalinux/8.5/isos/x86_64/AlmaLinux-8.5-x86_64-minimal.iso",
    "iso_checksum": "fddb5646627aecc572127ecf0b5a3b2b6dd4435f1a1b5ad42013c7fa1bff8ca8",
    "iso_checksum_type": "sha256",
    "cpu": "4",
    "ram": "1024",
    "disk_size": "3700",
    "name": "alma-linux",
    "version": "8",
    "type": "minimal",
    "arch": "x86_64",
    "img_type": "qcow2",
    "headless": "true",
    "config_file": "ks.cfg",
    "config_folder": "config/almalinux-8-minimal",
    "ssh_username": "root",
    "ssh_password": "S33!]HsHym/cK.n*<#,)#Nx2_h5Y>MN74xT,j4}Ak9Ny[3,yB",
    "output_dir": "./output/"
  },
  "builders": [
    {
      "vnc_bind_address": "0.0.0.0",
      "vnc_port_max": 5901,
      "vnc_port_min": 5901,
      "name": "{{user `name`}}-{{user `version`}}-{{user `arch`}}.{{user `img_type`}}",
      "type": "qemu",
      "format": "{{user `img_type`}}",
      "accelerator": "kvm",
      "qemu_binary": "/usr/bin/qemu-system-x86_64",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "disk_cache": "none",
      "qemuargs": [
        [
          "-m",
          "{{user `ram`}}M"
        ],
        [
          "-smp",
          "{{user `cpu`}}"
        ]
      ],
      "ssh_wait_timeout": "30m",
      "http_directory": ".",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "iso_urls": "{{user `iso_urls`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "boot_wait": "5s",
      "boot_command": [
        "<up><wait><tab><wait> net.ifnames=0 biosdevname=0 text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `config_folder`}}/http/{{user `config_file`}}<enter><wait>"
      ],
      "disk_size": "{{user `disk_size`}}",
      "disk_discard": "unmap",
      "disk_compression": true,
      "headless": "{{user `headless`}}",
      "shutdown_command": "shutdown -h now",
      "vm_name": "{{user `name`}}-{{user `version`}}-{{user `type`}}-{{user `arch`}}.{{user `img_type`}}",
      "output_directory": "{{user `output_dir`}}{{user `name`}}-{{user `version`}}-{{user `type`}}-{{user `arch`}}"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./{{user `config_folder`}}/ansible/default.yml",
      "roles_path": "./{{user `config_folder`}}/ansible/roles",
      "ansible_env_vars": [
        "ANSIBLE_SSH_ARGS='-o ControlMaster=no -o ControlPersist=180s -o ServerAliveInterval=120s -o TCPKeepAlive=yes'"
      ]
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} bash '{{.Path}}'",
      "inline": [
        "dd if=/dev/zero of=/EMPTY bs=1M",
        "rm -rf /EMPTY",
        "sync",
        "history -c",
        "passwd -d root",
        "passwd -l root"
      ]
    }
  ]
}
