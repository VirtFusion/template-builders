{
  "variables": {
    "iso_urls": "https://cdimage.debian.org/cdimage/weekly-builds/amd64/iso-cd/debian-testing-amd64-netinst.iso",
    "iso_checksum": "305c7e33bc0cad62b425f86f2670daf4353607ff7619d6f5d26257f765bfc686627e0af9c7f4110ff371e62eb0cbca10c870892592fcaf64011335746b6dc0a8",
    "iso_checksum_type": "sha512",
    "cpu": "4",
    "ram": "1024",
    "arch": "x86_64",
    "img_type": "qcow2",
    "disk_size": "2000",
    "name": "debian",
    "version": "12",
    "type": "minimal",
    "config_folder": "config/debian-12-minimal",
    "headless": "true",
    "config_file": "preseed.cfg",
    "ssh_username": "root",
    "ssh_password": "L=hD6!rf<4x{[$^@rDt9wTbp8?28)}",
    "output_dir": "../output/"
  },
  "builders": [
    {
      "name": "{{user `name`}}-{{user `version`}}-{{user `type`}}-{{user `arch`}}.{{user `img_type`}}",
      "vnc_port_max": 5901,
      "vnc_port_min": 5901,
      "vnc_bind_address": "0.0.0.0",
      "type": "qemu",
      "format": "{{user `img_type`}}",
      "accelerator": "kvm",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "disk_cache": "none",
      "qemuargs": [
        [
          "-m",
          "{{user `ram`}}M"
        ],
        [
          "-smp",
          "{{user `cpu`}}"
        ]
      ],
      "ssh_wait_timeout": "30m",
      "http_directory": ".",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "host_port_min": 2222,
      "host_port_max": 2229,
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "iso_urls": "{{user `iso_urls`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "boot_wait": "15s",
      "boot_command": [
        "<esc><wait>",
        "auto <wait>",
        "net.ifnames=0 biosdevname=0 <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "console-setup/ask_detect=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "debian-installer=en_US <wait>",
        "fb=false <wait>",
        "install <wait>",
        "kbd-chooser/method=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "locale=en_US <wait>",
        "netcfg/get_hostname={{user `name`}}{{user `version`}} <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `config_folder`}}/http/{{user `config_file`}} <wait>",
        "<enter><wait>"
      ],
      "disk_size": "{{user `disk_size`}}",
      "disk_discard": "unmap",
      "disk_compression": true,
      "headless": "{{user `headless`}}",
      "shutdown_command": "echo '{{user `ssh_password`}}' | shutdown -P now",
      "output_directory": "{{user `output_dir`}}{{user `name`}}-{{user `version`}}-{{user `type`}}-{{user `arch`}}",
      "vm_name": "{{user `name`}}-{{user `version`}}-{{user `type`}}-{{user `arch`}}.{{user `img_type`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{.Vars}} bash '{{.Path}}'",
      "inline": [
        "apt-get -y autoremove --purge",
        "apt-get clean",
        "rm -rf /usr/share/man/??",
        "rm -rf /usr/share/man/??_*",
        "echo \"source /etc/network/interfaces.d/*\" > /etc/network/interfaces",
        "sed -i -e \"s/^#\\?PasswordAuthentication.*/PasswordAuthentication no/g\" /etc/ssh/sshd_config",
        "dd if=/dev/zero of=/EMPTY bs=1M",
        "rm -rf /EMPTY",
        "sync",
        "history -c",
        "passwd -d root",
        "passwd -l root"
      ]
    }
  ]
}