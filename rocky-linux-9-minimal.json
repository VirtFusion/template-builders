{
  "variables": {
    "iso_urls": "https://download.rockylinux.org/pub/rocky/9/isos/x86_64/Rocky-9.0-x86_64-minimal.iso",
    "iso_checksum": "dbe7ee3000baa22ebfc7d66611597081c6b3e792a8c0c86a5a9d58e14650d874",
    "cpu": "4",
    "ram": "4098",
    "cpu_type": "Skylake-Client-IBRS",
    "name": "rocky-linux",
    "config_folder": "config/rocky-linux-9-minimal",
    "disk_size": "2000",
    "version": "9",
    "type": "minimal",
    "iso_checksum_type": "sha256",
    "headless": "true",
    "config_file": "ks.cfg",
    "ssh_username": "root",
    "ssh_password": "S33!]HsHym/cK.n*<#,)#Nx2_h5Y>MN74xT,j4}Ak9Ny[3,yB",
    "output_dir": "./output/"
  },
  "builders": [
    {
      "vnc_bind_address": "0.0.0.0",
      "vnc_port_max": 5901,
      "vnc_port_min": 5901,
      "name": "{{user `name`}}-{{user `version`}}-{{user `type`}}-x86_64.qcow2",
      "type": "qemu",
      "format": "qcow2",
      "accelerator": "kvm",
      "qemu_binary": "/usr/bin/qemu-system-x86_64",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "disk_cache": "none",
      "qemuargs": [
        [
          "-m",
          "{{user `ram`}}M"
        ],
        [
          "-smp",
          "{{user `cpu`}}"
        ],
        [
          "-cpu",
          "{{user `cpu_type`}}"
        ]
      ],
      "ssh_wait_timeout": "30m",
      "http_directory": ".",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "iso_urls": "{{user `iso_urls`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "boot_wait": "5s",
      "boot_command": [
        "<tab> inst.text biosdevname=0 net.ifnames=0 inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `config_folder`}}/http/{{user `config_file`}}<enter><wait>"
      ],
      "disk_size": "{{user `disk_size`}}",
      "disk_discard": "unmap",
      "disk_compression": true,
      "headless": "{{user `headless`}}",
      "shutdown_command": "shutdown -h now",
      "vm_name": "{{user `name`}}-{{user `version`}}-{{user `type`}}-x86_64.qcow2",
      "output_directory": "{{user `output_dir`}}{{user `name`}}-{{user `version`}}-{{user `type`}}-x86_64"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./{{user `config_folder`}}/ansible/default.yml",
      "roles_path": "./{{user `config_folder`}}/ansible/roles",
      "ansible_env_vars": [
        "ANSIBLE_SSH_ARGS='-o ControlMaster=no -o ControlPersist=180s -o ServerAliveInterval=120s -o TCPKeepAlive=yes'"
      ]
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} bash '{{.Path}}'",
      "inline": [
        "dd if=/dev/zero of=/EMPTY bs=1M",
        "rm -rf /EMPTY",
        "sync",
        "history -c",
        "passwd -d root",
        "passwd -l root"
      ]
    }
  ]
}
